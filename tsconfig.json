{
  "include": ["src"],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["es2020"],
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@pkmn/sim/*": ["node_modules/@pkmn/sim/build/sim/*"]
    },
  }
}
