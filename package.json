{
  "name": "@pkmn/engine",
  "version": "0.1.0",
  "main": "build/pkg/index.js",
  "types": "build/pkg/index.d.ts",
  "description": "A minimal, complete, PokÃ©mon battle simulation engine optimized for performance",
  "repository": "github:pkmn/engine",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@pkmn/data": "^0.5.14",
    "@pkmn/protocol": "^0.4.0"
  },
  "devDependencies": {
    "@pkmn/eslint-config": "^2.4.0",
    "@pkmn/sim": "^0.5.14",
    "@types/jest": "^27.4.1",
    "@types/minimist": "^1.2.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint": "^8.13.0",
    "jest": "^27.5.1",
    "minimist": "^1.2.6",
    "mustache": "^4.2.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts,js",
    "fix": "eslint --fix src --ext ts,js",
    "compile": "tsc -p .",
    "build": "npm run compile",
    "test": "jest",
    "test:integration": "jest --coverage=false --testRegex='src/test/.*\\.test\\.ts$'",
    "generate": "npm run compile && node build/tools/generate",
    "benchmark": "npm run compile && node build/test/benchmark"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [ "src/pkg/*.ts"],
    "coverageDirectory": "coverage/js",
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": "src/pkg/.*\\.test\\.ts$",
    "testPathIgnorePatterns": ["node_modules/", "build/"],
    "moduleNameMapper": {
      "^@pkmn/sim/(.*)$": "<rootDir>/node_modules/@pkmn/sim/build/sim/$1"
    }
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "ignorePatterns": ["dist/", "node_modules/", "src/examples/zig"],
    "overrides": [{
      "files": ["src/pkg/index.ts"],
      "rules": {
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-shadow": "off"
      }
    }, {
      "files": ["src/test/benchmark/index.ts"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }, {
      "files": ["src/tools/install.ts"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }]
  }
}
