{
  "name": "@pkmn/engine",
  "version": "0.1.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "description": "A minimal, complete Pok√©mon battle simulation engine optimized for performance",
  "repository": "github:pkmn/engine",
  "license": "MIT",
  "dependencies": {
    "@pkmn/data": "^0.5.12",
    "@pkmn/protocol": "^0.4.0"
  },
  "devDependencies": {
    "@pkmn/eslint-config": "^2.4.0",
    "@pkmn/randoms": "^0.5.12",
    "@pkmn/sim": "^0.5.12",
    "@types/jest": "^27.4.1",
    "@types/minimist": "^1.2.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "minimist": "^1.2.6",
    "mustache": "^4.2.0",
    "source-map-support": "^0.5.21",
    "trakr": "^0.2.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts,js",
    "fix": "eslint --fix src --ext ts,js",
    "compile": "tsc -p .",
    "build": "npm run compile",
    "test": "jest",
    "generate": "npm run compile && node build/tools/generate",
    "test:integration": "jest --coverage=false --testRegex='src/test/.*\\.test\\.ts$'"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [ "src/pkg/*.ts"],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": "src/pkg/.*\\.test\\.ts$",
    "testPathIgnorePatterns": ["node_modules/", "build/"],
    "moduleNameMapper": {
      "^@pkmn/sim/(.*)$": "<rootDir>/node_modules/@pkmn/sim/build/sim/$1"
    }
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "overrides": [{
        "files": ["src/pkg/index.ts"],
        "rules": {
          "@typescript-eslint/no-empty-interface": "off",
          "@typescript-eslint/no-shadow": "off"
        }
    }]
  }
}
