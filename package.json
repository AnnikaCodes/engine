{
  "name": "@pkmn/engine",
  "version": "0.1.0",
  "main": "build/pkg/index.js",
  "types": "build/pkg/index.d.ts",
  "description": "A minimal, complete, PokÃ©mon battle simulation engine optimized for performance",
  "repository": "github:pkmn/engine",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "install-pkmn-engine": "src/bin/install-pkmn-engine"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/pkg",
    "!build/pkg/*.test.*",
    "src/pkg",
    "!src/pkg/*.test.*",
    "src/lib",
    "!src/**/test.zig",
    "!src/lib/commmon/data",
    "src/bin/install-pkmn-engine"
  ],
  "dependencies": {
    "@pkmn/data": "^0.5.18",
    "@pkmn/protocol": "^0.4.2"
  },
  "devDependencies": {
    "@pkmn/eslint-config": "^2.5.0",
    "@pkmn/sim": "^0.5.18",
    "@types/jest": "^27.5.1",
    "@types/minimist": "^1.2.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "minimist": "^1.2.6",
    "mustache": "^4.2.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "lint": "eslint --cache src --ext ts,js",
    "fix": "eslint --fix src --ext ts,js",
    "compile": "tsc -p .",
    "build": "npm run compile",
    "test": "jest",
    "test:integration": "jest --testRegex='src/test/.*\\.test\\.ts$'",
    "generate": "npm run compile && node build/tools/generate",
    "benchmark": "npm run compile && node build/test/benchmark",
    "postinstall": "node src/bin/install-pkmn-engine"
  },
  "jest": {
    "collectCoverageFrom": [ "src/pkg/*.ts"],
    "coverageDirectory": "coverage/js",
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "verbose": false,
    "testEnvironment": "node",
    "testRegex": "src/pkg/.*\\.test\\.ts$",
    "testPathIgnorePatterns": ["node_modules/", "build/"],
    "moduleNameMapper": {
      "^@pkmn/sim/(.*)$": "<rootDir>/node_modules/@pkmn/sim/build/sim/$1"
    }
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "ignorePatterns": ["dist/", "node_modules/", "src/examples/zig"],
    "overrides": [{
      "files": ["src/pkg/index.ts"],
      "rules": {
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-shadow": "off"
      }
    }, {
      "files": ["src/test/benchmark/*.ts"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }, {
      "files": ["src/test/showdown.test.ts"],
      "rules": {
        "jest/expect-expect": [
          "warn",
          { "assertFunctionNames": ["expect", "expectLog"] }
        ]
      }
    }, {
      "files": ["src/tools/generate.ts"],
      "rules": {
        "@typescript-eslint/restrict-template-expressions": ["error", {"allowBoolean": true}]
      }
    }]
  }
}
